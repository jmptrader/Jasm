<project name="jasm" default="jarfile"> 
  <import file="config.xml"/>
 
  <!-- ============================================== -->
  <!-- Build Commands -->
  <!-- ============================================== -->

  <target name="build">
    <javac debug="true" debuglevel="vars,lines,source" source="1.6" includeantruntime="true" classpath="${JPLUG_JAR}"> 
      <src path="src"/>
      <include name="*/**"/>
      <exclude name="jasm/testing/**"/> 
      <exclude name="*/**/package-info.java"/> 
    </javac>
  </target>

  <!-- ============================================== -->
  <!-- Documenation --> 
  <!-- ============================================== -->

  <target name="doc">
    <javadoc
       destdir="docs/api"
       author="true"
       version="true"
       use="true"
       windowtitle="Jasm API">
      <doctitle><![CDATA[<h1>Jasm: a Java Bytecode Assembler / Disassembler (v${version})</h1>]]></doctitle>
      <bottom><![CDATA[<i>Copyright &#169; 2013 David J. Pearce. All Rights Reserved.</i>]]></bottom>
      <packageset dir="src">
	<include name="jasm/**"/>
	<exclude name="jasm/testing/**"/>
      </packageset>
      </javadoc>
  </target>

  <!-- ============================================== -->
  <!-- Distribution -->
  <!-- ============================================== -->

  <target name="jarfile" depends="build">
    <mkdir dir="lib"/>
    <mkdir dir="tmp"/>
    <manifest file="tmp/MANIFEST.MF">
      <attribute name="Built-By" value="${user.name}"/>
      <attribute name="Main-Class" value="jasm.Main"/>
      <attribute name="Bundle-Name" value="Jasm"/>
      <attribute name="Bundle-SymbolicName" value="org.whiley.jasm"/>
      <attribute name="Bundle-Version" value="${version}"/>
      <attribute name="Bundle-Activator" value="jasm.JasmPlugin$Activator"/>
      <attribute name="Require-Bundle" value="org.whiley.wybs;bundle-version=&quot;0.3.0&quot;"/>
    </manifest>    
    <jar destfile="lib/jasm-v${version}.jar" manifest="tmp/MANIFEST.MF">
      <fileset dir="src">
	<include name="jasm/**/*.class"/>
      </fileset>
    </jar>
    <delete dir="tmp"/>
    <echo message="============================================="/>
    <echo message="BUILT: lib/jasm-${version}.jar"/>
    <echo message="============================================="/>
  </target>

  <!-- ============================================== -->
  <!-- Plugin Installation -->
  <!-- ============================================== -->
  
  <target name="plugin" depends="jarfile">
    <copy todir="../../${plugin.dir}">
      <fileset dir="lib/">
	<include name="jasm-v${version}.jar"/>
      </fileset>
    </copy>
  </target>

  <!-- ============================================== -->
  <!-- Misc Commands -->
  <!-- ============================================== -->

  <target name="clean">
    <delete includeEmptyDirs="true" failonerror="false">
      <fileset file="*~"/>
      <fileset dir="lib"/>
      <fileset dir="dist"/>
      <fileset dir="docs"/>
      <fileset dir="tests">
	<include name="**/*.class"/>
      </fileset>
    </delete>
  </target>

</project>
